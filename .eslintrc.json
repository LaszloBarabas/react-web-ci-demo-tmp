
{
    "plugins": ["react"],
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint", 
    "extends": ["eslint:recommended", "plugin:react/recommended" ],
    "parserOptions": {
        "sourceType": "module", 
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "react/prop-types": 0, 
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }]
    }
}
